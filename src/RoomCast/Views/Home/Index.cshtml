@{
    ViewData["Title"] = "Welcome to RoomCast";
}

<!-- Soft background gradient wrapper -->
<div class="bg-gradient-to-b from-slate-50 to-slate-100 min-h-screen pt-10 md:pt-16">

    <!-- HERO SECTION -->
    <section class="text-center py-20 px-6">
        <h1 class="text-5xl font-extrabold text-slate-900 mb-6">
            Share your media. <span class="text-indigo-600">Anywhere.</span>
        </h1>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto mb-8">
            RoomCast lets you upload, organize, and display your digital files seamlessly across devices.
            Simple, secure, and made for teams and creators.
        </p>
        <br />

        <div class="flex flex-wrap justify-center gap-4">
            <a asp-controller="MediaFiles" asp-action="Upload" aria-label="Upload a new file"
               class="px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg shadow hover:bg-indigo-500 transition">
                Get Started
            </a>
            <a asp-controller="MediaFiles" asp-action="Index" aria-label="View my uploaded files"
               class="px-6 py-3 border border-indigo-600 text-indigo-700 font-semibold rounded-lg hover:bg-indigo-50 transition">
                Show My Files
            </a>
        </div>
        <br />
    </section>

    <!-- FEATURE CARDS -->
    <section class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto py-16 px-6">
        <div class="bg-white p-8 rounded-xl shadow hover:shadow-lg transition text-center">
            <i class="bi bi-cloud-upload text-indigo-600 text-4xl mb-3"></i>
            <h3 class="text-xl font-semibold text-slate-800 mb-2">Upload</h3>
            <p class="text-slate-600 text-sm">Upload images, PDFs, or videos effortlessly from any device.</p>
        </div>
        <div class="bg-white p-8 rounded-xl shadow hover:shadow-lg transition text-center">
            <i class="bi bi-collection text-indigo-600 text-4xl mb-3"></i>
            <h3 class="text-xl font-semibold text-slate-800 mb-2">Organize</h3>
            <p class="text-slate-600 text-sm">Group your media into albums for better management and sharing.</p>
        </div>
        <div class="bg-white p-8 rounded-xl shadow hover:shadow-lg transition text-center">
            <i class="bi bi-display text-indigo-600 text-4xl mb-3"></i>
            <h3 class="text-xl font-semibold text-slate-800 mb-2">Display</h3>
            <p class="text-slate-600 text-sm">Instantly display your media on connected screens anywhere.</p>
        </div>
    </section>



