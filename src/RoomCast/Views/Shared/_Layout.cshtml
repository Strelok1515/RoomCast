@using Microsoft.AspNetCore.Identity
@using RoomCast.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoomCast</title>

    <!-- Browser Icon -->
    <link rel="icon" type="image/png" href="~/favicon.png" sizes="32x32">

    <!-- Tailwind -->
    <link rel="stylesheet" href="~/css/tailwind.generated.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- FIXED Bootstrap CSS (NO integrity, NO crossorigin) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/media-preview.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/viewerjs@1.11.6/dist/viewer.min.css" />
    <link rel="stylesheet" href="~/css/viewer-overrides.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

@{
    var isFullWidthLayout = ViewData["IsFullWidthLayout"] is true;
    var hideLayoutFooter = ViewData["HideLayoutFooter"] is true;

    var containerClass = isFullWidthLayout
        ? "flex w-full flex-1 flex-col"
        : "mx-auto flex w-full max-w-7xl flex-1 flex-col px-4 py-6 sm:px-6 lg:px-8";

    var mainContentClass = ViewData["MainContentClass"] as string
        ?? (isFullWidthLayout ? "flex flex-1 flex-col" : string.Empty);

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    bool brandClickable =
        SignInManager.IsSignedIn(User) &&
        !(currentController == "Account" && (currentAction == "Login" || currentAction == "SignUp"));

    var brandHref = brandClickable ? Url.Action("Index", "Home") : "#";
    var brandClasses = "flex items-center space-x-2 text-white hover:text-indigo-300 transition"
                       + (brandClickable ? "" : " pointer-events-none cursor-default");
}
<body class="bg-slate-100 text-slate-800 min-h-screen flex flex-col">

    <!-- NAVBAR -->
    <header class="bg-slate-900 text-white shadow-sm leading-none">
        <nav class="mx-auto flex w-full max-w-7xl items-center justify-between gap-6 px-4 py-1 sm:px-6 lg:px-8">

            <!-- Logo -->
            <a href="@brandHref" class="@brandClasses">
                <img src="~/images/RoomCast_Transparent_White_Text.png"
                     alt="RoomCast Logo"
                     style="width: 120px; height: auto;" />
            </a>

            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center gap-6">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="text-sm text-slate-200 hover:text-white" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-sm text-slate-200 hover:text-white" asp-controller="MediaFiles" asp-action="Index">My Files</a>
                    <a class="text-sm text-slate-200 hover:text-white" asp-controller="MediaFiles" asp-action="Upload">Upload</a>
                    <a class="text-sm text-slate-200 hover:text-white" asp-controller="Albums" asp-action="Index">Albums</a>
                    <a class="text-sm text-slate-200 hover:text-white" asp-controller="Screens" asp-action="Index">Screens</a>
                }

                <div class="flex items-center gap-3">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <span class="text-sm text-slate-300">Hello @User.Identity?.Name!</span>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="rounded-full border border-white/30 px-3 py-1 text-sm text-white hover:bg-white/10">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login"
                           class="rounded-full bg-white px-4 py-1 text-sm font-semibold text-slate-900 hover:bg-slate-100">
                            Login
                        </a>
                    }
                </div>
            </div>

            <!-- Mobile Menu Button -->
            <button id="mobileNavToggle" type="button"
                    class="inline-flex items-center rounded-md border border-white/30 px-3 py-2 md:hidden">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-width="1.5"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </nav>

        <!-- Mobile Menu -->
        <div id="mobileNavPanel" class="hidden border-t border-white/10 bg-slate-900/95 px-4 py-4 md:hidden">
            @if (SignInManager.IsSignedIn(User))
            {
                <a class="text-sm text-slate-100" asp-controller="Home" asp-action="Index">Home</a>
                <a class="text-sm text-slate-100" asp-controller="MediaFiles" asp-action="Index">My Files</a>
                <a class="text-sm text-slate-100" asp-controller="MediaFiles" asp-action="Upload">Upload</a>
                <a class="text-sm text-slate-100" asp-controller="Albums" asp-action="Index">Albums</a>
                <a class="text-sm text-slate-100" asp-controller="Screens" asp-action="Index">Screens</a>
            }
            else
            {
                <a class="rounded-md bg-white px-4 py-2 text-center text-sm text-slate-900"
                   asp-controller="Account" asp-action="Login">Login</a>
                <a class="rounded-md border border-white/40 px-4 py-2 text-center text-sm text-white"
                   asp-controller="Account" asp-action="SignUp">Sign Up</a>
            }
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <div class="@containerClass">
        <main class="@mainContentClass">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    @if (!hideLayoutFooter)
    {
        <footer class="mt-auto bg-slate-900 py-4 text-sm text-slate-300">
            <div class="mx-auto max-w-7xl px-4 flex justify-between">
                <span>&copy; 2025 - RoomCast</span>
                <a asp-controller="Home" asp-action="Privacy"
                   class="text-slate-200 hover:underline">Privacy</a>
            </div>
        </footer>
    }

    <!-- Viewer JS -->
    <script src="https://cdn.jsdelivr.net/npm/viewerjs@1.11.6/dist/viewer.min.js"></script>

    <!-- FIXED Bootstrap JS (NO integrity, NO crossorigin) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        // Mobile menu toggle
        const toggle = document.getElementById('mobileNavToggle');
        const panel = document.getElementById('mobileNavPanel');

        toggle?.addEventListener('click', () => {
            panel.classList.toggle('hidden');
        });
    </script>
</body>
</html>
