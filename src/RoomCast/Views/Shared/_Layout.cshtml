@using Microsoft.AspNetCore.Identity
@using RoomCast.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoomCast</title>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/tailwind.generated.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-Aq2lYt57JzhEuVbOqPQAV2v5B2XqMJphBOPHT3b7LvF37xYr3NR7V6hYyV8ZqbT7" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/media-preview.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/viewerjs@1.11.6/dist/viewer.min.css" />
    <link rel="stylesheet" href="~/css/viewer-overrides.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
@{
    var isFullWidthLayout = ViewData["IsFullWidthLayout"] is true;
    var hideLayoutFooter = ViewData["HideLayoutFooter"] is true;
    var containerClass = isFullWidthLayout
        ? "flex w-full flex-1 flex-col"
        : "mx-auto flex w-full max-w-7xl flex-1 flex-col px-4 py-6 sm:px-6 lg:px-8";
    var mainContentClass = ViewData["MainContentClass"] as string ?? (isFullWidthLayout ? "flex flex-1 flex-col" : string.Empty);

    // Restrict "RoomCast" logo navigation for unauthenticated users
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    bool brandClickable =
        SignInManager.IsSignedIn(User) &&
        !(currentController == "Account" && (currentAction == "Login" || currentAction == "SignUp"));
    var brandHref = brandClickable ? Url.Action("Index", "Home") : "#";
    var brandClasses = "flex items-center space-x-2 text-white hover:text-indigo-300 transition" + (brandClickable ? "" : " pointer-events-none select-none cursor-default");
    var brandTitle = brandClickable ? "Go to Home" : "RoomCast";
}
<body class="bg-slate-100 text-slate-800 min-h-screen flex flex-col">
    <!-- Compact Navbar -->
    <header class="bg-slate-900 text-white shadow-sm leading-none">
        <nav class="mx-auto flex w-full max-w-7xl items-center justify-between gap-6 px-4 py-1 sm:px-6 lg:px-8">
            <!-- Logo -->
            <a href="@brandHref" class="@brandClasses" title="@brandTitle" aria-disabled="@(brandClickable ? "false" : "true")" tabindex="@(brandClickable ? "0" : "-1")">
                <img src="~/images/RoomCast_Transparent_White_Text.png"
                     alt="RoomCast Logo"
                     class="object-contain drop-shadow-md"
                     style="width: 120px; height: auto;" />
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center justify-end gap-6">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="flex items-center gap-5">
                        <a class="text-sm font-medium text-slate-200 hover:text-white transition"
                           asp-controller="Home" asp-action="Index">Home</a>
                        <a class="text-sm font-medium text-slate-200 hover:text-white transition"
                           asp-controller="MediaFiles" asp-action="Index">My Files</a>
                        <a class="text-sm font-medium text-slate-200 hover:text-white transition"
                           asp-controller="MediaFiles" asp-action="Upload">Upload</a>
                        <a class="text-sm font-medium text-slate-200 hover:text-white transition"
                           asp-controller="Albums" asp-action="Index">Albums</a>
                        <a class="text-sm font-medium text-slate-200 hover:text-white transition"
                           asp-controller="Screens" asp-action="Index">Screens</a>
                    </div>
                }

                <div class="flex items-center gap-3">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <span class="text-sm text-slate-300">Hello @User.Identity?.Name!</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="rounded-full border border-white/30 px-3 py-1 text-sm font-medium text-white hover:bg-white/10 transition">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="rounded-full bg-white px-4 py-1 text-sm font-semibold text-slate-900 hover:bg-slate-100 transition"
                           asp-controller="Account" asp-action="Login">Login</a>
                    }
                </div>
            </div>

            <!-- Mobile Menu Toggle -->
            <button id="mobileNavToggle"
                    type="button"
                    class="inline-flex items-center rounded-md border border-white/30 px-3 py-2 text-sm font-semibold text-white transition hover:border-white hover:bg-white/10 md:hidden"
                    aria-controls="mobileNavPanel"
                    aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </nav>

        <!-- Mobile Navigation -->
        <div id="mobileNavPanel" class="hidden border-t border-white/10 bg-slate-900/95 px-4 py-4 sm:px-6 md:hidden">
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="flex flex-col gap-4">
                    <a class="text-sm font-medium text-slate-100 hover:text-white transition"
                       asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-sm font-medium text-slate-100 hover:text-white transition"
                       asp-controller="MediaFiles" asp-action="Index">My Files</a>
                    <a class="text-sm font-medium text-slate-100 hover:text-white transition"
                       asp-controller="MediaFiles" asp-action="Upload">Upload</a>
                    <a class="text-sm font-medium text-slate-100 hover:text-white transition"
                       asp-controller="Albums" asp-action="Index">Albums</a>
                    <a class="text-sm font-medium text-slate-100 hover:text-white transition"
                       asp-controller="Screens" asp-action="Index">Screens</a>
                    <span class="text-sm text-slate-300">Hello @User.Identity?.Name!</span>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="pt-2">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="w-full rounded-md bg-white px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-slate-100 transition">
                            Logout
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="flex flex-col gap-3">
                    <a class="rounded-md bg-white px-4 py-2 text-center text-sm font-semibold text-slate-900 hover:bg-slate-100 transition"
                       asp-controller="Account" asp-action="Login">Login</a>
                    <a class="rounded-md border border-white/40 px-4 py-2 text-center text-sm font-semibold text-white hover:bg-white/10 hover:border-white transition"
                       asp-controller="Account" asp-action="SignUp">Sign Up</a>
                </div>
            }
        </div>
    </header>

    <!-- MAIN BODY CONTENT -->
    <div class="@containerClass">
        <main role="main" class="@(string.IsNullOrWhiteSpace(mainContentClass) ? null : mainContentClass)">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    @if (!hideLayoutFooter)
    {
        <footer class="mt-auto bg-slate-900 py-4 text-sm text-slate-300">
            <div class="mx-auto flex w-full max-w-7xl flex-col items-center justify-between gap-2 px-4 text-center sm:flex-row sm:px-6 lg:px-8">
                <span>&copy; 2025 - RoomCast</span>
                <a class="text-slate-200 underline-offset-4 transition hover:text-white hover:underline"
                   asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/viewerjs@1.11.6/dist/viewer.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-GcyzhD3N7P9QHx0sWa7zMPsfk+mN+5dK3nDAlJKGVOueQoQNFuMIbkAX80dtvJko" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
    <script>
        (() => {
            const toggle = document.getElementById('mobileNavToggle');
            const panel = document.getElementById('mobileNavPanel');
            if (!toggle || !panel) return;

            toggle.addEventListener('click', () => {
                const expanded = toggle.getAttribute('aria-expanded') === 'true';
                toggle.setAttribute('aria-expanded', (!expanded).toString());
                panel.classList.toggle('hidden', expanded);
            });
        })();
    </script>
</body>
</html>
