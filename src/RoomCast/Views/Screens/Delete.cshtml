@model RoomCast.Models.Casting.Screen
@{
    ViewData["Title"] = "Delete Screen";
}

<style>
    /* =======================
           RoomCast — Delete Screen UI
           ======================= */

    .rc-wrap {
        max-width: 960px;
        margin: 3rem auto;
        padding: 0 1rem;
    }

    .rc-card {
        background: #ffffff;
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(2,6,23,0.06);
        overflow: hidden;
    }

    .rc-head {
        padding: 1.5rem;
        border-bottom: 1px solid #f1f5f9;
        background: linear-gradient(135deg, #dc2626 0%, #ef4444 60%, #f87171 100%);
        color: #fff;
    }

    .rc-title {
        font-size: 1.5rem;
        font-weight: 800;
    }

    .rc-sub {
        font-size: .95rem;
        opacity: .9;
    }

    .rc-body {
        padding: 1.5rem;
    }

    .rc-warning-box {
        background: #fff7ed;
        border: 1px solid #fdba74;
        padding: 1rem 1.25rem;
        border-radius: .75rem;
        color: #7c2d12;
        margin-bottom: 1.25rem;
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .rc-warning-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: grid;
        place-items: center;
        background: #f97316;
        color: white;
        font-size: 1.25rem;
        box-shadow: 0 4px 10px rgba(249,115,22,.35);
    }

    .rc-details {
        font-size: 1rem;
        color: #334155;
        line-height: 1.55rem;
    }

    .rc-actions {
        padding: 1rem 1.5rem;
        display: flex;
        gap: .75rem;
        border-top: 1px solid #eef2f7;
        background: #fbfdff;
    }

    .rc-btn {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        padding: .75rem 1.25rem;
        font-size: .95rem;
        font-weight: 600;
        border-radius: .75rem;
        transition: .2s ease;
    }

    .rc-btn-danger {
        background: #dc2626;
        color: #fff;
        box-shadow: 0 8px 18px rgba(220,38,38,.25);
    }

        .rc-btn-danger:hover {
            filter: brightness(1.1);
        }

    .rc-btn-secondary {
        background: #fff;
        border: 1px solid #e5e7eb;
        color: #475569;
    }

        .rc-btn-secondary:hover {
            background: #f8fafc;
            border-color: #d1d5db;
        }

</style>

<div class="rc-wrap">
    <div class="rc-card">

        <!-- HEADER -->
        <div class="rc-head">
            <div class="rc-title">Delete Screen</div>
            <div class="rc-sub">You are about to permanently delete this screen.</div>
        </div>

        <!-- BODY -->
        <div class="rc-body">

            <div class="rc-warning-box">
                <div class="rc-warning-icon">
                    <i class="bi bi-exclamation-lg"></i>
                </div>
                <div>
                    <strong>Warning:</strong> This action cannot be undone.
                    Media and album assignments linked to this screen may no longer be displayed.
                </div>
            </div>

            <div class="rc-details">
                <p><strong>Screen Name:</strong> @Model.Name</p>
                <p><strong>Location:</strong> @Model.Location</p>
                <p><strong>Description:</strong> @(String.IsNullOrWhiteSpace(Model.Description) ? "No description provided." : Model.Description)</p>
            </div>
        </div>

        <!-- ACTION BUTTONS -->
        <form asp-action="Delete" class="rc-actions">
            @Html.AntiForgeryToken()

            <button type="submit" class="rc-btn rc-btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>

            <a href="@Url.Action("Index", "Screens")"
               class="rc-btn rc-btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
