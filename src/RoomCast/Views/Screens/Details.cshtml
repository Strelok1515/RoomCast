@model RoomCast.Models.Casting.Screen
@{
    ViewData["Title"] = "Screen Details";
}

<style>
    .icon-zoom {
        transition: transform 0.15s ease;
    }

        .icon-zoom:hover {
            transform: scale(1.15);
        }
</style>

<div class="max-w-6xl mx-auto bg-white rounded-2xl shadow p-10 ring-1 ring-slate-200 mt-6">

    <!-- HEADER -->
    <div class="flex justify-between items-center mb-10">
        <div>
            <h1 class="text-3xl font-bold text-slate-900 flex items-center gap-2">
                <i class="bi bi-tv text-indigo-600 icon-zoom"></i>
                Screen Details
            </h1>
        </div>

        <a asp-action="Index"
           class="inline-flex items-center gap-2 text-sm text-indigo-600 hover:text-indigo-700 transition font-medium">
            <i class="bi bi-arrow-left"></i> Back to Screens
        </a>
    </div>

    <!-- SCREEN INFO -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 mb-10">

        <div>
            <h3 class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Screen Name</h3>
            <p class="text-lg font-semibold text-slate-800">@Model.Name</p>
        </div>

        <div>
            <h3 class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Location</h3>
            <p class="text-lg font-semibold text-slate-800">@Model.Location</p>
        </div>

        <div>
            <h3 class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Created</h3>
            <p class="text-lg text-slate-700">@Model.CreatedAt.ToLocalTime().ToString("f")</p>
        </div>

        <div>
            <h3 class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Description</h3>
            <p class="text-slate-700 whitespace-pre-line">
                @(string.IsNullOrWhiteSpace(Model.Description) ? "No description provided." : Model.Description)
            </p>
        </div>

    </div>

    <hr class="my-10" />

    <!-- ASSIGNED MEDIA -->
    <h2 class="text-xl font-semibold text-slate-900 mb-4 flex items-center gap-2">
        <i class="bi bi-collection-play text-indigo-600 icon-zoom"></i>
        Assigned Media
    </h2>

    @if (Model.ScreenMediaAssignments?.Any() == true)
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">

            @foreach (var item in Model.ScreenMediaAssignments)
            {
                var file = item.MediaFile;

                <div class="bg-slate-50 rounded-xl p-4 shadow-sm border border-slate-200 hover:shadow-md transition">

                    <!-- Thumbnail -->
                    <div class="h-40 w-full rounded-lg overflow-hidden bg-slate-200 flex items-center justify-center mb-3">
                        @if (file.FileType == "Picture" || file.FileType == "Image")
                        {
                            <img src="@file.FilePath" class="w-full h-full object-cover" />
                        }
                        else if (file.FileType == "Video")
                        {
                            <video class="w-full h-full object-cover" muted preload="metadata">
                                <source src="@file.FilePath" />
                            </video>
                        }
                        else
                        {
                            <i class="bi bi-file-earmark-text text-slate-500 text-5xl"></i>
                        }
                    </div>

                    <!-- Info -->
                    <p class="font-semibold text-slate-800 truncate">@file.Title</p>
                    <p class="text-xs uppercase text-slate-500">@file.FileType</p>
                </div>
            }

        </div>
    }
    else
    {
        <p class="text-slate-500 mb-12">No media assigned to this screen.</p>
    }

    <hr class="my-10" />

    <!-- ASSIGNED ALBUMS -->
    <h2 class="text-xl font-semibold text-slate-900 mb-4 flex items-center gap-2">
        <i class="bi bi-folder text-indigo-600 icon-zoom"></i>
        Assigned Albums
    </h2>

    @if (Model.AlbumScreenAssignments?.Any() == true)
    {
        <ul class="list-disc ml-6 text-slate-800 space-y-1 mb-12">
            @foreach (var album in Model.AlbumScreenAssignments)
            {
                <li class="font-medium">@album.Album?.AlbumName</li>
            }
        </ul>
    }
    else
    {
        <p class="text-slate-500 mb-12">No albums assigned.</p>
    }

    <!-- ACTION BUTTONS -->
    <div class="flex justify-end gap-4 mt-10">

        <a asp-action="AssignMedia" asp-route-id="@Model.ScreenId"
           class="px-5 py-2 rounded-lg bg-indigo-600 text-white text-sm font-medium hover:bg-indigo-500 transition shadow">
            <i class="bi bi-sliders"></i> Assign Media
        </a>

        <a asp-action="Delete" asp-route-id="@Model.ScreenId"
           class="px-5 py-2 rounded-lg bg-red-600 text-white text-sm font-medium hover:bg-red-500 transition shadow">
            <i class="bi bi-trash"></i> Delete Screen
        </a>

    </div>

</div>
