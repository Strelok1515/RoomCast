@model RoomCast.ViewModels.ScreenDisplayViewModel

@{
    Layout = null; // No layout for fullscreen display
    ViewData["Title"] = "Screen Display";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.ScreenName - Media Display</title>
    <meta http-equiv="refresh" content="60" /> <!-- Refresh every 60 seconds -->
    <style>
        body {
            background-color: black;
            color: white;
            margin: 0;
            padding: 0;
            font-family: sans-serif;
        }
        .media-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden;
        }
        img, video, iframe {
            max-width: 100%;
            max-height: 90vh;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="media-container">
        @foreach (var media in Model.AssignedMediaFiles)
        {
            if (media.FileType == "Image")
            {
                <img src="@Url.Content(media.FilePath)" alt="@media.Title" />
            }
            else if (media.FileType == "Video")
            {
                <video controls autoplay muted loop>
                    <source src="@Url.Content(media.FilePath)" type="video/mp4" />
                    Your browser does not support the video tag.
                </video>
            }
            else if (media.FileType == "PDF")
            {
                <iframe src="@Url.Content(media.FilePath)" width="90%" height="600px"></iframe>
            }
        }
    </div>
</body>
</html>
