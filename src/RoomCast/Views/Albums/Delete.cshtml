@model RoomCast.Models.Album

@{
    ViewData["Title"] = "Delete Album";
}

<div class="max-w-3xl mx-auto mt-16 px-8 py-10 bg-white rounded-2xl shadow-md ring-1 ring-slate-200">

    <h2 class="text-4xl font-bold text-rose-600 mb-2">
        Delete Album
    </h2>

    <p class="text-slate-600 text-lg mb-8">
        This action is permanent and cannot be undone.
    </p>

    <!-- Album Info Box -->
    <div class="rounded-xl border border-rose-200 bg-rose-50 p-6 mb-10">
        <p class="font-semibold text-rose-800 text-xl">
            Album Name: @Model.AlbumName
        </p>
        <p class="text-sm text-rose-700 mt-1">
            Created: @Model.Timestamp.ToLocalTime().ToString("f")
        </p>
    </div>

    <form asp-action="Delete" method="post" class="flex flex-col gap-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AlbumId" />

        <!-- Delete Button -->
        <button type="submit"
                class="w-full rc-btn rc-btn-danger text-white font-semibold rounded-lg py-3 text-lg">
            <i class="bi bi-trash-fill mr-1"></i> Yes, Delete Album
        </button>

        <!-- Cancel Button -->
        <a asp-action="Index"
           class="w-full text-center rc-btn rc-btn-light py-3 text-lg">
            Cancel
        </a>
    </form>
</div>

<style>
    .rc-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.35rem;
        padding: 0.75rem 1rem;
        border-radius: 0.6rem;
        font-weight: 600;
        transition: background 0.18s, border-color 0.18s, color 0.18s;
    }

    .rc-btn-danger {
        background: #dc2626;
        border: 1px solid #dc2626;
    }

        .rc-btn-danger:hover {
            background: #b91c1c;
            border-color: #b91c1c;
        }

    .rc-btn-light {
        border: 1px solid #cbd5e1;
        background: #f8fafc;
        color: #475569;
    }

        .rc-btn-light:hover {
            background: #eef2f6;
            border-color: #94a3b8;
            color: #334155;
        }
</style>