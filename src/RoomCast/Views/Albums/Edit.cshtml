@model RoomCast.Models.Album
@{
    ViewData["Title"] = "Edit Album";
}

<div class="max-w-3xl mx-auto mt-16 px-8 py-10 bg-white rounded-2xl shadow-md ring-1 ring-slate-200">

    <h2 class="text-4xl font-bold text-slate-900 mb-2">
        Edit Album
    </h2>

    <p class="text-slate-600 text-lg mb-8">
        Update the album name or modify details below.
    </p>

    <form asp-action="Edit" method="post" class="space-y-6">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AlbumId" />

        <!-- Album Name -->
        <div class="space-y-2">
            <label asp-for="AlbumName" class="text-sm font-semibold text-slate-700"></label>
            <input asp-for="AlbumName"
                   class="w-full rounded-lg border border-slate-300 bg-white px-4 py-3 text-base text-slate-700 shadow-sm
                          focus:border-indigo-600 focus:ring-2 focus:ring-indigo-200 transition" />
            <span asp-validation-for="AlbumName" class="text-sm text-red-600"></span>
        </div>

        <!-- Buttons -->
        <div class="flex items-center gap-4 pt-4">
            <button type="submit"
                    class="rc-btn rc-btn-primary text-white px-6 py-3 text-base rounded-lg">
                Save Changes
            </button>

            <a asp-action="Index"
               class="rc-btn rc-btn-light px-6 py-3 text-base">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .rc-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        border-radius: 0.6rem;
        transition: 0.18s background, 0.18s border-color, 0.18s color;
    }

    .rc-btn-primary {
        background: #4f46e5;
        border: 1px solid #4f46e5;
        color: white;
    }

        .rc-btn-primary:hover {
            background: #4338ca;
            border-color: #4338ca;
        }

    .rc-btn-light {
        border: 1px solid #cbd5e1;
        background: #f8fafc;
        color: #475569;
    }

        .rc-btn-light:hover {
            background: #eef2f6;
            border-color: #94a3b8;
            color: #334155;
        }
</style>
