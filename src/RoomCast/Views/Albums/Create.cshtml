@model RoomCast.Models.Album
@{
    ViewData["Title"] = "Create Album";
}

<div class="max-w-4xl mx-auto mt-12">
    <!-- wider card -->
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-slate-200 p-10 space-y-10">
        <!-- more padding -->
        <!-- Header -->
        <div>
            <h2 class="text-4xl font-semibold text-slate-900">Create Album</h2>
            <p class="text-base text-slate-500 mt-2">
                Choose a name for your new album. You can add media once it's created.
            </p>
        </div>

        <!-- Info Box -->
        <div class="rounded-xl border border-slate-200 bg-slate-50/70 p-6 flex items-start gap-5">
            <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-indigo-100">
                <i class="bi bi-folder-plus text-indigo-600 text-3xl"></i>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-slate-800">New Album</h3>
                <p class="text-sm text-slate-500">This helps keep your media organized and easy to find.</p>
            </div>
        </div>

        <!-- Form -->
        <form asp-action="Create" method="post" class="space-y-8">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-sm text-red-600"></div>

            <div class="space-y-2">
                <label asp-for="AlbumName" class="text-sm font-semibold text-slate-700">Album Name</label>
                <input asp-for="AlbumName"
                       placeholder="e.g., Holiday Photos, Work Presentation, Family Trip 2025"
                       class="w-full rounded-xl border border-slate-300 bg-white px-5 py-3 text-sm text-slate-700
                              shadow-sm transition focus:border-indigo-500 focus:ring-2
                              focus:ring-indigo-200 focus:outline-none" />
                <span asp-validation-for="AlbumName" class="text-sm text-red-600"></span>
            </div>

            <!-- Buttons -->
            <div class="flex items-center gap-4 pt-4">
                <button type="submit"
                        class="inline-flex items-center justify-center rounded-lg bg-emerald-600 px-6 py-3
                               text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-500
                               focus-visible:outline focus-visible:outline-2
                               focus-visible:outline-offset-2 focus-visible:outline-emerald-600">
                    Create Album
                </button>

                <a asp-action="Index"
                   class="inline-flex items-center justify-center rounded-lg border border-slate-300 bg-white px-6 py-3
                          text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-100">
                    Cancel
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<style>
    .rc-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        border-radius: 0.6rem;
        transition: 0.18s background, 0.18s border-color, 0.18s color;
    }

    .rc-btn-primary {
        background: #10b981;
        border: 1px solid #10b981;
        color: white;
    }

        .rc-btn-primary:hover {
            background: #0d9b6c;
            border-color: #0d9b6c;
        }

    .rc-btn-light {
        border: 1px solid #cbd5e1;
        background: #f8fafc;
        color: #475569;
    }

        .rc-btn-light:hover {
            background: #eef2f6;
            border-color: #94a3b8;
            color: #334155;
        }
</style>

